@model UpdateRoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";

}

<h1 class="mt-2 text-center">Edit Role</h1>
<hr />

<form method="post" asp-action="Edit" class="mt-4">
    <input asp-for="@Model.Id" hidden />
   
    <div class="form-group" mt-2>
        <label asp-for="@Model.Name" class="mb-2"></label>
        <input asp-for="@Model.Name" class="form-control"/>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>

        <div class="input-group mt-2 justify-content-center">
            <button type="submit" class="btn btn-success m-2 rounded-2">Save</button>
            <a asp-action="Index" class="btn btn-dark m-2 rounded-2">Back To List</a>

        </div>

    </div>

</form>



