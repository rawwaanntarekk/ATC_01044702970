@model string

@{
    ViewBag.Title = "Booking Confirmation";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4">Booking Confirmed!</h1>
            <div class="alert alert-success mt-4">
                <h4>Congratulations!</h4>
                <p>You have successfully booked the event: <strong>@Model</strong></p>
            </div>
            <div class="mt-4">
                <p>Thank you for your booking. We look forward to seeing you at the event!</p>
                <p>You will be redirected to the event list page in 5 seconds....</p>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        window.location.href = '@Url.Action("Index", "Event")';
    }, 5000); 
</script>


