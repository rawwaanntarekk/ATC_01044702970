@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";

}

<h1 class="mt-2 text-center">All Users</h1>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(user => user.Id)</th>
                <th>@Html.DisplayNameFor(user => user.DisplayName)</th>
                <th>@Html.DisplayNameFor(user => user.Username)</th>
                <th>@Html.DisplayNameFor(user => user.Email)</th>
                <th>@Html.DisplayNameFor(user => user.Roles)</th>
                <th>Actions</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.DisplayName</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@string.Join(',' , user.Roles.ToList())</td>

                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    </td>
                </tr>
            }

        </tbody>

    </table>
}

else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are no users yet!</h2>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}