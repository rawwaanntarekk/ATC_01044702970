@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid py-5 bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-primary mb-3">Experience Events Like Never Before</h1>
            <p class="lead text-muted mb-4">Your one-stop platform for seamless event booking and management</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <div class="feature-card p-5 h-100 bg-primary bg-opacity-10 border-end">
                                    <div class="d-inline-block p-3 bg-primary bg-opacity-10 rounded-circle mb-3">
                                        <i class="fas fa-calendar-check fs-2 text-primary"></i>
                                    </div>
                                    <h3 class="h5 fw-bold mb-2">Effortless Booking</h3>
                                    <p class="text-muted mb-0">
                                        Select, book, and confirm your spot at amazing events 
                                        in just a few taps.
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="feature-card p-5 h-100 bg-warning bg-opacity-10 border-end">
                                    <div class="d-inline-block p-3 bg-warning bg-opacity-10 rounded-circle mb-3">
                                        <i class="fas fa-shield-alt fs-2 text-warning"></i>
                                    </div>
                                    <h3 class="h5 fw-bold mb-2">Flexible Cancellation</h3>
                                    <p class="text-muted mb-0">
                                        Plans changed? No worries. Cancel or modify your bookings 
                                        with zero hassle.
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="feature-card p-5 h-100 bg-success bg-opacity-10">
                                    <div class="d-inline-block p-3 bg-success bg-opacity-10 rounded-circle mb-3">
                                        <i class="fas fa-clock fs-2 text-success"></i>
                                    </div>
                                    <h3 class="h5 fw-bold mb-2">Always Available</h3>
                                    <p class="text-muted mb-0">
                                        Access your bookings and manage events 24/7, 
                                        wherever you are.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>